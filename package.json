{
  "name": "swift-formatter-pro",
  "version": "1.0.0",
  "description": "Swift Formatter PRO â€” sleek Windows USB formatting utility (Electron + Bootstrap Dark + PowerShell).",
  "main": "main.js",
  "author": "Robin Doak",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/skillerious/SwiftFormatter.git"
  },
  "homepage": "https://github.com/skillerious/SwiftFormatter",
  "bugs": {
    "url": "https://github.com/skillerious/SwiftFormatter/issues"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.skillerious.swiftformatter",
    "productName": "Swift Formatter PRO",
    "asar": true,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "renderer.js",
      "version.json",
      "package.json",
      "build/**"
    ],
    "extraResources": [
      "version.json"
    ],
    "artifactName": "SwiftFormatter-${version}-${arch}.${ext}",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Swift Formatter PRO",
      "installerIcon": "build/logo.ico",
      "uninstallerIcon": "build/logo.ico",
      "installerHeaderIcon": "build/logo.ico"
    },
    "publish": [],
    "detectUpdateChannel": false,
    "generateUpdatesFilesForAllChannels": false
  }
}
